<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.my.RechargeActivity">

    <include layout="@layout/layout_left_title_black_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_height40"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/item_height40"
                android:background="@drawable/shape_sku_dialog_bg"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="35dp"
                android:paddingRight="20dp"
                android:paddingBottom="35dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recharge_tab_2"
                        android:textColor="@color/color_15"
                        android:layout_marginRight="15dp"
                        android:textSize="@dimen/text_size12" />


                    <TextView
                        android:id="@+id/tv_paytype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/recharge_tab_10"
                        android:textColor="@color/color_15"
                        android:textSize="@dimen/text_size15" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recharge_tab_3"
                        android:textColor="@color/color_15"
                        android:textSize="@dimen/text_size12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="ï¿¥"
                            android:textColor="@color/color_15"
                            android:textSize="@dimen/text_size12" />


                        <EditText
                            android:id="@+id/et_recharge_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:inputType="number"
                            android:hint="@string/recharge_tab_8"
                            android:maxLength="17"
                            android:textColor="@color/color_15"
                            android:textSize="@dimen/text_size12" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/recharge_tab_13"
                        android:textColor="@color/color_15"
                        android:textSize="@dimen/text_size12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="AU$"
                            android:textColor="@color/color_15"
                            android:textSize="@dimen/text_size12" />


                        <TextView
                            android:id="@+id/tv_recharge_money_adu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:maxLength="17"
                            android:text="0.000"
                            android:textColor="@color/color_15"
                            android:textSize="@dimen/text_size12" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/black" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_pay"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/recharge_tab_11"
                    android:textColor="@color/color_15"
                    android:textSize="@dimen/text_size12" />

                <ImageView
                    android:id="@+id/iv_pay_credentials"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/addpic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:text="@string/recharge_tab_12"
                    android:textColor="@color/color_15"
                    android:textSize="@dimen/text_size12" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2px"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/item_height50"
                        android:paddingTop="5dp"
                        android:paddingRight="@dimen/item_height50"
                        android:paddingBottom="5dp"
                        android:text="@string/recharge_tab_4"
                        android:textColor="@color/color_15"
                        android:textSize="@dimen/text_size12" />


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>