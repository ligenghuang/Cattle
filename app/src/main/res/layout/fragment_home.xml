<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent" />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal"
            android:padding="7dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_classify_et_bg">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/icon_logo"
                android:layout_marginRight="7dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_82"/>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/search"/>

            <TextView
                android:id="@+id/et_classify_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/classify_tab_1"
                android:textColor="@color/color_15"
                android:textSize="@dimen/text_size13"
                android:background="@color/transparent"
                android:textColorHint="@color/color_82"/>

        </LinearLayout>

       <ImageView
           android:id="@+id/iv_message"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="20dp"
           android:visibility="gone"
           android:src="@drawable/icon_message"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height40"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/icon_logo"/>

       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_weight="1">


               <TextView
                   android:id="@+id/tv_type_1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/selector_goods_text_bg"
                   android:gravity="center"
                   android:padding="@dimen/dp_10"
                   android:text="@string/home_tab_1"
                   android:textColor="@color/color_15"
                   android:textSize="@dimen/text_size13" />

               <TextView
                   android:id="@+id/tv_type_2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/selector_goods_text_bg"
                   android:gravity="center"
                   android:padding="@dimen/dp_10"
                   android:text="@string/home_tab_2"
                   android:textColor="@color/color_15"
                   android:textSize="@dimen/text_size13" />

               <TextView
                   android:id="@+id/tv_type_3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/selector_goods_text_bg"
                   android:gravity="center"
                   android:padding="@dimen/dp_10"
                   android:text="@string/home_tab_3"
                   android:textColor="@color/color_15"
                   android:textSize="@dimen/text_size13" />

               <TextView
                   android:id="@+id/tv_type_4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/selector_goods_text_bg"
                   android:gravity="center"
                   android:padding="@dimen/dp_10"
                   android:text="@string/home_tab_3"
                   android:textColor="@color/color_15"
                   android:textSize="@dimen/text_size13" />


           </LinearLayout>

       </HorizontalScrollView>


        <ImageView
            android:id="@+id/iv_home_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/icon_home_more"/>

    </LinearLayout>

    <com.lgh.huanglib.util.cusview.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>