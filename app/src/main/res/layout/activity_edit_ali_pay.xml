<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.my.EditAliPayActivity">

    <include layout="@layout/layout_title_black_bar"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/item_height40"
        android:layout_marginRight="@dimen/dp_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_alipay_tab_2"
                    android:textColor="@color/color_15"
                    android:textSize="@dimen/text_size15"
                    android:layout_marginRight="20dp"/>

                <EditText
                    android:id="@+id/et_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/edit_alipay_tab_3"
                    android:textColorHint="@color/color_9"
                    android:textColor="@color/color_15"
                    android:textSize="@dimen/text_size12"
                    />

            </LinearLayout>

            <View style="@style/line_4"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_alipay_tab_4"
                    android:textColor="@color/color_15"
                    android:textSize="@dimen/text_size15"
                    android:layout_marginRight="20dp"/>

                <EditText
                    android:id="@+id/et_alipay_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/edit_alipay_tab_5"
                    android:textColorHint="@color/color_9"
                    android:textColor="@color/color_15"
                    android:textSize="@dimen/text_size12"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_btn_bg"
        android:text="@string/edit_alipay_tab_6"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:padding="13dp"
        android:textSize="@dimen/text_size15"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

</LinearLayout>