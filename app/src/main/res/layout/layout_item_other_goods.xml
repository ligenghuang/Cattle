<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="2px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_item_goods_img"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:src="@drawable/icon_goods"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_item_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_15"
                android:textSize="@dimen/text_size13"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dp_10"
                android:text="商品标题商品标商品标题商品标……"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/tv_item_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AU$69.00"
                    android:textSize="@dimen/text_size15"
                    android:textColor="@color/color_fd69a5"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_item_goods_original_price"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="AU$89.00"
                    android:textColor="@color/color_82"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size12"/>




            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>