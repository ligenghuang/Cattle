<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/icon_poverty_relief_bg">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="2px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical"
            >
            <!--商品名称-->
            <TextView
                android:id="@+id/tv_item_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附件寿宁富硒野生春笋干"
                android:textColor="@color/color_15"
                android:textSize="@dimen/text_size15"
                />

            <!--商品介绍-->
            <TextView
                android:id="@+id/tv_item_goods_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size11"
                android:textColor="@color/color_15"
                android:text="农家自制 特色风味"
                android:layout_marginTop="@dimen/dp_10"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10">

                <!--现价-->
                <TextView
                    android:id="@+id/tv_item_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="98.8"
                    android:textColor="@color/color_fd69a5"
                    android:textSize="@dimen/text_size24"
                    android:textStyle="bold"
                    />

                <!--规格-->
                <TextView
                    android:id="@+id/tv_item_goods_spec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="元/500g"
                    android:textSize="@dimen/text_size12"
                    android:textColor="@color/color_15"/>


                <!--原价-->
                <TextView
                    android:id="@+id/tv_item_goods_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="106.8"
                    android:textSize="@dimen/text_size12"
                    android:textColor="@color/color_15"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_goods_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_login_btn_bg"
                android:text="@string/home_tab_7"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/text_size12"
                android:paddingLeft="7dp"
                android:paddingTop="3dp"
                android:paddingRight="7dp"
                android:paddingBottom="3dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/icon_add_cart"/>


        </LinearLayout>


            <ImageView
                android:id="@+id/iv_item_goods_img"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon_goods"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>