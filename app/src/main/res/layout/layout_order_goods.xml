<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_order_goods_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/icon_good_img"
        android:layout_marginRight="6dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_order_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_order_goods_img"
        android:textColor="@color/color_15"
        android:textSize="@dimen/text_size12"
        android:layout_marginRight="90dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="青年说是你发手机话费hhsjg连衣裙好连衣裙连衣裙..."/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_order_goods_name"
        android:gravity="right"
        android:layout_alignParentRight="true">


        <TextView
            android:id="@+id/tv_order_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AU$100.00"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size12"
            android:textColor="@color/color_15"/>

        <TextView
            android:id="@+id/tv_order_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x2"
            android:textSize="@dimen/text_size12"
            android:textColor="@color/color_15"/>

    </LinearLayout>

</RelativeLayout>