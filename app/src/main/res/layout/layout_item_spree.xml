<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/icon_spree_bg"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="2px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="2px"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_goods_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:text="醇甜多汁软糯细腻"
                    android:textColor="@color/color_15"
                    android:textSize="@dimen/text_size15" />

                <TextView
                    android:id="@+id/tv_item_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:text="五丰智利绿心猕猴桃"
                    android:textColor="@color/color_15"
                    android:textSize="@dimen/text_size12" />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/color_c"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2px"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">


                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center_vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="7dp"
                          android:background="@drawable/shape_tv_sales_bg"
                          android:ems="1"
                          android:padding="3dp"
                          android:text="@string/home_tab_5"
                          android:textColor="@color/white"
                          android:textSize="@dimen/text_size11" />

                      <!--促销价-->
                      <TextView
                          android:id="@+id/tv_sales"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="@dimen/dp_10"
                          android:textSize="@dimen/text_size24"
                          android:textColor="@color/color_fd69a5"
                          android:textStyle="bold"
                          android:text="98.8"/>


                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="6dp"
                          android:layout_marginRight="30dp"
                          android:orientation="vertical">


                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/home_tab_6"
                              android:textColor="@color/color_15"
                              android:textSize="@dimen/text_size12"/>

                          <TextView
                              android:id="@+id/tv_original_price"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="48.00"
                              android:layout_marginTop="3dp"
                              android:textColor="@color/color_15"
                              android:textSize="@dimen/text_size12"/>



                      </LinearLayout>


                  </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</LinearLayout>