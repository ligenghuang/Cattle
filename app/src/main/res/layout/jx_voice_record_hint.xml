<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_recording_hint_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/jx_ic_mic" />

    <ImageView
        android:id="@+id/iv_voic_amplitude"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/iv_recording_hint_bg"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tv_recording_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_recording_hint_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:text="@string/jx_sliding_to_cancel"
        android:textColor="@color/white"
        android:textSize="10sp" />

</RelativeLayout>