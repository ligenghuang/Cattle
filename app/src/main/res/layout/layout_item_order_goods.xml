<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_item_order_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_good_img" />

        <TextView
            android:id="@+id/tv_item_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/iv_item_order_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Haoduoyi2018秋季新品女装 欧美宽松休闲套头卫衣Haoduoyi2018秋季新品女装 欧美宽松休闲套头卫衣Haoduoyi2018秋季新品女装 欧美宽松休闲套头卫衣"
            android:textColor="@color/color_15"
            android:textSize="@dimen/text_size12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_order_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_order_name"
            android:layout_toRightOf="@id/iv_item_order_img"
            android:text="颜色:蓝色；尺寸:M码"
            android:textColor="@color/color_15"
            android:textSize="@dimen/text_size11" />


        <TextView
            android:id="@+id/tv_item_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_order_name"
            android:layout_alignParentRight="true"
            android:text="￥368 "
            android:textColor="@color/color_15"
            android:textSize="@dimen/text_size12"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>