<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_cart_bg"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_item_goods"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_hollow_circle"
        android:padding="5dp"
        android:src="@drawable/selector_circle" />

    <ImageView
        android:id="@+id/iv_item_goods_img"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="35dp"
        android:layout_toRightOf="@id/iv_item_goods"
        android:src="@drawable/icon_good_img" />

    <TextView
        android:id="@+id/tv_item_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_item_goods_img"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/item_height50"
        android:layout_toRightOf="@id/iv_item_goods_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="卡布奇诺卡布奇诺卡布奇诺卡布奇诺卡布奇诺卡布奇诺手机第三季度等级分级......"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_item_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_goods_img"
        android:layout_toRightOf="@id/iv_item_goods_img"
        android:text="AU$888.00"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size12" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignBaseline="@id/tv_item_goods_price"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_hollow_circle"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_item_goods_subtract"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:gravity="center"
            android:textColor="@color/color_15"
            android:textSize="@dimen/text_size12" />

        <View style="@style/line_3" />

        <EditText
            android:id="@+id/et_item_goods_num"
            android:layout_width="@dimen/item_height45"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="12"
            android:maxLines="1"
            android:inputType="number"
            android:textColor="@color/color_15"
            android:textSize="@dimen/text_size12"
            android:layout_height="wrap_content"/>

        <View style="@style/line_3" />

        <TextView
            android:id="@+id/tv_item_goods_add"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+"
            android:gravity="center"
            android:textColor="@color/color_15"
            android:textSize="@dimen/text_size12" />

    </LinearLayout>

</RelativeLayout>